{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Clang++: Compile OpenGL Project",
            "command": "C:\\mingw64\\bin\\clang++.exe",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${workspaceFolder}\\src\\main.cpp",
                "-I${workspaceFolder}\\include",
                "-L${workspaceFolder}\\libraries",
                "-lglfw3dll",
                "-lglew32",
                "-lopengl32",
                "-o",
                "${workspaceFolder}\\bin\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task configured by user."
        }
    ],
    "version": "2.0.0"
}